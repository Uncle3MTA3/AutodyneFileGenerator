<project name="AutodyneFileGenerator" default="init" basedir=".">
    <description>
        simple example increment build variable
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="./src"/>

  <target name="init">
      <buildnumber/>
      <replaceregexp file="${src}/com/autodyne/Graphics.java"
               match="private static final String BUILD_NUMBER = &quot;1.*&quot;;"
               replace="private static final String BUILD_NUMBER = &quot;1.${build.number}&quot;;"
               byline="true"
      />
  </target>
</project>